#!/usr/bin/env bash
set -euo pipefail

PROJECT_ROOT="$(pwd)"
QUALITY_BIN="$PROJECT_ROOT/vendor/bin/quality-checks"
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

if [ -x "$QUALITY_BIN" ]; then
  RUN_DETECT_SECRETS=1 exec "$QUALITY_BIN"
fi

RUN_DETECT_SECRETS=1 exec "$SCRIPT_DIR/run-quality-checks.sh"
