{
  "name": "voyager/php-quality-tools",
  "description": "PHP quality tools (Docker-based checking)",
  "type": "library",
  "require": {
    "php": ">=8.2",
    "squizlabs/php_codesniffer": "^3.9",
    "phpstan/phpstan": "^1.10",
    "phpro/grumphp": "^2.9"
  },
  "scripts": {
    "post-install-cmd": [
      "bash scripts/setup-hooks.sh || true"
    ]
  },
  "autoload": {
    "psr-4": {
      "Voyager\\QualityTools\\": "src/"
    }
  }
}
